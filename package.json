{
    "name": "@iota-pico/pow-webgl",
    "version": "0.7.0",
    "description": "IOTA Pico Framework Proof Of Work WebGL",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "keywords": [
        "iota",
        "pico",
        "interface",
        "tangle",
        "javascript",
        "typescript",
        "API"
    ],
    "directories": {
        "doc": "docs",
        "test": "test"
    },
    "author": "martyn@iota.eco",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/iotaeco/iota-pico-pow-webgl.git"
    },
    "engines": {
        "node": ">=8"
    },
    "scripts": {
        "build-clean": "rimraf ./dist/*",
        "build-compile": "tsc",
        "build-lint": "tslint -p ./tsconfig.json -c ./tslint.json -t verbose",
        "build": "npm-run-all build-clean build-compile build-lint",
        "test-clean": "rimraf ./test/dist/**/*.js ./coverage/*",
        "test-compile": "tsc -p ./test/tsconfig.json",
        "test-lint": "tslint -p ./test/tsconfig.json -c ./tslint.json -t verbose",
        "test-run": "karma start ./karma.conf.js",
        "test": "npm-run-all test-clean test-compile test-lint test-run",
        "test-publish": "coveralls ./coverage/lcov.info",
        "docs-clean": "rimraf ./docs/*",
        "docs-generate": "typedoc --module commonjs --excludePrivate --theme markdown --readme none --hideGenerator --mode file --target es5 --exclude ./**/src/index.ts --out ./docs ./src",
        "docs": "npm-run-all docs-clean docs-generate",
        "security": "nsp check",
        "dist": "npm-run-all build test docs security"
    },
    "dependencies": {
        "@iota-pico/core": "^0.7.0",
        "@iota-pico/crypto": "^0.7.0",
        "@iota-pico/data": "^0.7.0",
        "crypto-js": "^3.1.9-1"
    },
    "devDependencies": {
        "@types/chai": "^4.1.1",
        "@types/mocha": "^2.2.46",
        "chai": "^4.1.2",
        "karma": "^2.0.0",
        "karma-chrome-launcher": "^2.2.0",
        "karma-coverage": "^1.1.1",
        "karma-coverage-allsources": "0.0.4",
        "karma-mocha": "^1.3.0",
        "karma-remap-coverage": "^0.1.5",
        "karma-remap-istanbul": "^0.6.0",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-story-reporter": "^0.3.1",
        "karma-typescript": "^3.0.12",
        "karma-typescript-preprocessor": "^0.3.1",
        "mocha": "^5.0.0",
        "npm-run-all": "^4.1.2",
        "nsp": "^3.1.0",
        "rimraf": "^2.6.2",
        "systemjs": "^0.21.0",
        "ts-loader": "^3.5.0",
        "ts-node": "^4.1.0",
        "tslint": "^5.9.1",
        "tslint-microsoft-contrib": "^5.0.2",
        "typedoc": "^0.10.0",
        "typedoc-plugin-markdown": "^1.0.12",
        "typescript": "^2.7.1",
        "webpack": "^3.11.0"
    }
}
